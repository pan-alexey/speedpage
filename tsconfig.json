{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [ "node_modules/@types" ],
    "types": [
      "jest",
      "node",
    ],
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
  },
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "files": [
    "index.d.ts"
  ]
}